---
layout: layouts/default.liquid
title: Garrek.org
pagination:
  data: collections.posts
  size: 10
permalink: "{% if pagination.pageNumber == 0 %}/{% else %}/page/{{ pagination.pageNumber | plus: 1 }}/{% endif %}"
---

{% assign first_post = pagination.items | first %}
<div class="page-title">
    <h2><a href="{{ first_post.url }}">{{ first_post.data.title }}</a></h2>
    <h6 class="dateline">{{ first_post.date | date: '%A, %B %d %Y' }}</h6>
</div>
<div class="page-body">
    {{ first_post.content }}
<hr>

{% for post in pagination.items %}
{% if forloop.first %}{% continue %}{% endif %}

    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <h6 class="dateline">{{ post.date | date: '%A, %B %d %Y' }}</h6>

    {{ post.content }}

<hr>

{% endfor %}

{% if pagination.href.previous or pagination.href.next %}
<nav class="pagination-nav">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">&larr; Newer</a>
  {% else %}
    <span></span>
  {% endif %}
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Older &rarr;</a>
  {% endif %}
</nav>
{% endif %}
</div>

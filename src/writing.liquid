---
layout: layouts/default.liquid
title: Writing
permalink: /writing/
---

<div class="page-title">
<h2>Writing</h2>
</div>

<div class="page-body">
{% for yearPair in collections.postsByYear %}
    {% assign year = yearPair[0] %}
    {% assign yearPosts = yearPair[1] %}

    <h3>{{ year }}</h3>
    <ul>
    {% for post in yearPosts %}
    <p>
        <a href="{{ post.url }}">{{ post.data.title }}</a> &mdash; {{ post.date | date: 'date_to_string' }}
    </p>
    {% endfor %}
    </ul>
{% endfor %}
</div>
